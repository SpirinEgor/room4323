{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./build/",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es2015", "dom" ]
  }
}

