{
    "compilerOptions": {
        "rootDir": "src/app",
        "outDir": "build/app",
        "target": "es6",
        "inlineSourceMap": true,
        "inlineSources": false,
        "noImplicitAny": true,
        "noLib": false,
        "noEmitOnError": true,
        "declaration": false,
        "removeComments": false,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/*",
        "node_modules/*"
    ]
}
